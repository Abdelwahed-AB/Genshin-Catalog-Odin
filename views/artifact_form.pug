extends layout

block content
  section.content.margin-top-d
    form.newItem_form.pad-d.rounded-5(action='' method="POST")
      input#itemName(type='text' name='name' placeholder='Name' value=(artifact === undefined? "": artifact.name))
      select#itemRarity(name='rarity')
        option(value='' hidden='') Please select a rarity
        option(value='5' selected=(artifact.rarity === '5'? 'selected':false)) 5 Star
        option(value='4' selected=(artifact.rarity === '4'? 'selected':false)) 4 Star
        option(value='3' selected=(artifact.rarity === '3'? 'selected':false)) 3 Star
        option(value='2' selected=(artifact.rarity === '2'? 'selected':false)) 2 Star
        option(value='1' selected=(artifact.rarity === '1'? 'selected':false)) 1 Star
      textarea#itemDescription(name='description' cols='30' rows='10' placeholder='Description')= (artifact === undefined? "": artifact.description)
      input#profileImg(type='url' name='img' placeholder='Image link (example: https://paimon.moe/images/artifacts/adventurer_flower.png)' value=(artifact === undefined? "": artifact.img))
      input#pass(type="password" name="password" placeholder="Password")
      if errors 
        ul.errors 
          each err in errors 
            li!= err.msg
      button.addItem(type='submit' class="formBtn") Create artifact